<section class="site-container mt-14 mx-auto max-w-6xl px-4">
  <div class="site-container mt-14">
    <h2
      class="text-4xl font-bold flex flex-col items-center gap-6 text-center whitespace-nowrap text-white md:flex-row md:items-center md:text-start"
    >
      <span class="drop-shadow-[2px_2px_0_#B900BC]">Tecnolog√≠as</span>
      <span
        class="hidden h-1.5 grow rounded-lg drop-shadow-[2px_2px_0_#00FFAB] bg-[#B900BC] md:block"
      ></span>
    </h2>
  </div>
  <div class="mt-10 grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-6">
    {
      [
        { name: "Python", icon: "https://cdn.simpleicons.org/python/3776AB" },
        { name: "Pandas", icon: "https://cdn.simpleicons.org/pandas/150458" },
        { name: "NumPy", icon: "https://cdn.simpleicons.org/numpy/013243" },
        { name: "MySQL", icon: "https://cdn.simpleicons.org/mysql/4479A1" },
        { name: "Tableau", icon: "https://cdn.simpleicons.org/tableau/E97628" },
        { name: "Power BI", icon: "https://cdn.simpleicons.org/powerbi/F2C811" },
        { name: "Excel", icon: "https://cdn.simpleicons.org/microsoftexcel/217346" },
        { name: "Selenium", icon: "https://cdn.simpleicons.org/selenium/43B02A" },
        { name: "Git", icon: "https://cdn.simpleicons.org/git/F05032" },
        { name: "GitHub", icon: "https://cdn.simpleicons.org/github/white" },
        { name: "VS Code", icon: "https://cdn.simpleicons.org/visualstudiocode/007ACC" },
        { name: "BeautifulSoup", icon: "https://cdn.simpleicons.org/python/white" },
      ].map((skill) => (
        <div class="relative group">
          <div class="absolute inset-0 -z-10 rounded-lg blur-3xl opacity-0 transition-opacity group-hover:opacity-100" />

          <div class="flex flex-col items-center bg-gray-900 p-4 drop-shadow-[4px_4px_0_#B900BC] rounded-lg shadow-md transition-transform hover:scale-105">
            <img
              src={skill.icon}
              alt={skill.name}
              class="w-12 h-12 object-contain"
              loading="lazy"
            />
            <p class="mt-2 text-white text-lg font-semibold drop-shadow-[1px_1px_0_#B900BC]">{skill.name}</p>
          </div>
        </div>
      ))
    }
  </div>
</section>