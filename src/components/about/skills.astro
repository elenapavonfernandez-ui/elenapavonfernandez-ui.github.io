<section class="site-container mt-14 mx-auto max-w-6xl px-4">
  <div class="site-container mt-14">
    <h2
      class="text-4xl font-bold flex flex-col items-center gap-6 text-center whitespace-nowrap text-white md:flex-row md:items-center md:text-start"
    >
      <span class="drop-shadow-[2px_2px_0_#B900BC]">Tecnologías</span>
      <span
        class="hidden h-1.5 grow rounded-lg drop-shadow-[2px_2px_0_#00FFAB] bg-[#B900BC] md:block"
      ></span>
    </h2>
  </div>
  <div class="mt-10 grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-6">
    {
      [
        { name: "Python", icon: "https://api.iconify.design/logos:python.svg" },
        { name: "Pandas", icon: "https://api.iconify.design/logos:pandas-icon.svg" },
        { name: "NumPy", icon: "https://api.iconify.design/logos:numpy.svg" },
        { name: "MySQL", icon: "https://api.iconify.design/logos:mysql-icon.svg" },
        // Tableau en blanco para que se vea sobre el fondo oscuro
        { name: "Tableau", icon: "https://api.iconify.design/simple-icons:tableau.svg?color=white" },
        { name: "Power BI", icon: "https://api.iconify.design/simple-icons:powerbi.svg?color=%23f2c811" },
        // Excel con una ruta de Iconify más estable
        { name: "Excel", icon: "https://api.iconify.design/vscode-icons:file-type-excel.svg" },
        { name: "Selenium", icon: "https://api.iconify.design/logos:selenium.svg" },
        { name: "Git", icon: "https://api.iconify.design/logos:git-icon.svg" },
        { name: "GitHub", icon: "https://api.iconify.design/simple-icons:github.svg?color=white" },
        { name: "VS Code", icon: "https://api.iconify.design/logos:visual-studio-code.svg" },
        { name: "BeautifulSoup", icon: "https://api.iconify.design/logos:python.svg" },
      ].map((skill) => (
        <div class="relative group">
          <div class="absolute inset-0 -z-10 rounded-lg blur-3xl opacity-0 transition-opacity group-hover:opacity-100" />

          <div class="flex flex-col items-center bg-gray-900 p-4 drop-shadow-[4px_4px_0_#B900BC] rounded-lg shadow-md transition-transform hover:scale-105">
            <img
              src={skill.icon}
              alt={skill.name}
              class="w-12 h-12 object-contain"
              loading="lazy"
            />
            <p class="mt-2 text-white text-lg font-semibold drop-shadow-[1px_1px_0_#B900BC]">{skill.name}</p>
          </div>
        </div>
      ))
    }
  </div>
</section>