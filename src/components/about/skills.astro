<div class="mt-10 grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-6">
  {
    [
      { name: "Python", icon: "python", provider: "devicon" },
      { name: "Pandas", icon: "pandas", provider: "devicon" },
      { name: "NumPy", icon: "numpy", provider: "devicon" },
      { name: "MySQL", icon: "mysql", provider: "devicon" },
      { name: "Tableau", icon: "tableau", provider: "simpleicons", color: "E97628" },
      { name: "Power BI", icon: "powerbi", provider: "simpleicons", color: "F2C811" },
      { name: "Excel", icon: "microsoftexcel", provider: "simpleicons", color: "217346" },
      { name: "Selenium", icon: "selenium", provider: "devicon" },
      { name: "Git", icon: "git", provider: "devicon" },
      { name: "GitHub", icon: "github", provider: "simpleicons", color: "FFFFFF" }, // Lo forzamos a blanco
      { name: "VS Code", icon: "vscode", provider: "devicon" },
      { name: "BeautifulSoup", icon: "scrapy", provider: "simpleicons", color: "60A839" }, // Usamos Scrapy como icono de scraping
    ].map((skill) => (
      <div class="relative group">
        <div class="absolute inset-0 -z-10 rounded-lg blur-3xl opacity-0 transition-opacity group-hover:opacity-100 bg-[#00FFAB]/10" />

        <div class="flex flex-col items-center bg-gray-900/50 p-4 drop-shadow-[4px_4px_0_#B900BC] rounded-lg border border-white/5 transition-transform hover:scale-105">
          <img
            src={
              skill.provider === "devicon" 
                ? `https://cdn.jsdelivr.net/gh/devicons/devicon/icons/${skill.icon}/${skill.icon}-original.svg`
                : `https://img.shields.io/badge/-${skill.icon}?style=flat-square&logo=${skill.icon}&logoColor=${skill.color || 'white'}&labelColor=99999900` 
                // Usamos una tÃ©cnica limpia para obtener el logo de SimpleIcons sin fondo
            }
            alt={skill.name}
            class={`w-12 h-12 object-contain ${skill.name === 'GitHub' ? 'invert brightness-200' : ''}`}
          />
          <p class="mt-2 text-white text-lg font-semibold drop-shadow-[1px_1px_0_#B900BC]">{skill.name}</p>
        </div>
      </div>
    ))
  }
</div>
