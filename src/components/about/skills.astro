<section class="site-container mt-14 mx-auto max-w-6xl px-4">
  <div class="site-container mt-14">
    <h2
      class="text-4xl font-bold flex flex-col items-center gap-6 text-center whitespace-nowrap text-white md:flex-row md:items-center md:text-start"
    >
      <span class="drop-shadow-[2px_2px_0_#B900BC]">Tecnologías</span>
      <span
        class="hidden h-1.5 grow rounded-lg drop-shadow-[2px_2px_0_#00FFAB] bg-[#B900BC] md:block"
      ></span>
    </h2>
  </div>
  
  <div class="mt-10 grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-6">
    {
      [
        { name: "Python", icon: "python" },
        { name: "Pandas", icon: "pandas" },
        { name: "NumPy", icon: "numpy" },
        { name: "MySQL", icon: "mysql" },
        { name: "Tableau", icon: "tableau" },
        { name: "Power BI", icon: "powerbi" },
        { name: "Excel", icon: "excel" },
        { name: "Selenium", icon: "selenium" },
        { name: "Git", icon: "git" },
        { name: "GitHub", icon: "github" },
        { name: "VS Code", icon: "vscode" },
        { name: "BeautifulSoup", icon: "python" }, // BeautifulSoup no tiene icono oficial propio en DevIcon, usamos Python o uno genérico
      ].map((skill) => (
        <div class="relative group">
          <div class="absolute inset-0 -z-10 rounded-lg blur-3xl opacity-0 transition-opacity group-hover:opacity-100 bg-[#00FFAB]/20" />

          <div class="flex flex-col items-center bg-gray-900 p-4 drop-shadow-[4px_4px_0_#B900BC] rounded-lg shadow-md transition-transform hover:scale-105">
            <img
              src={`https://cdn.jsdelivr.net/gh/devicons/devicon/icons/${skill.icon}/${skill.icon}-original.svg`}
              alt={skill.name}
              class="w-12 h-12"
              onerror="this.src='https://www.svgrepo.com/show/452091/python.svg';" 
            />
            <p class="mt-2 text-white text-lg font-semibold drop-shadow-[1px_1px_0_#B900BC]">{skill.name}</p>
          </div>
        </div>
      ))
    }
  </div>
</section>
