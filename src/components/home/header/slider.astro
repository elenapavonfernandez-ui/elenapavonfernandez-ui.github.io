---
const technologies = [
  { name: "Python", file: "python.svg" },
  { name: "MySQL", file: "mysql.svg" },
  { name: "Power BI", file: "powerBI.svg" },
  { name: "Tableau", file: "Tableau-Logo.svg" },
  { name: "Excel", file: "excel.svg" },
  { name: "Pandas", file: "pandas.svg" },
  { name: "NumPy", file: "numpy-logo.svg" },
  { name: "Git", file: "git.svg" },
  { name: "GitHub", file: "github.png" }, // Único PNG
  { name: "Selenium", file: "selenium.svg" },
  { name: "Beautiful Soup", file: "beautifulsoup.svg" },
  { name: "WordPress", file: "wordpress.svg" },
  { name: "VS Code", file: "vscode.svg" },
  { name: "Bash", file: "bash.svg" }
];
---

<div class="relative overflow-x-hidden px-8 py-8">
  <div class="animate-scroll hover:animate-paused flex w-max gap-12 md:gap-20">
    {
      [...technologies, ...technologies, ...technologies].map((tech) => (
        <div class="group flex items-center gap-2 transition-all duration-300">
          <img
            src={`/svg/${tech.file}`} 
            alt={tech.name}
            class="h-8 w-auto object-contain transition-transform group-hover:scale-110"
            /* Si la ruta sigue mal, esto te avisará en la consola del navegador */
            onerror={`console.warn('Error cargando: /svg/${tech.file}')`}
            width="32"
            height="32"
            loading="lazy"
          />
          <span class="text-lg font-medium text-white whitespace-nowrap">
            {tech.name}
          </span>
        </div>
      ))
    }
  </div>
</div>

<style is:global>
  @keyframes scroll {
    from { transform: translateX(0); }
    to { transform: translateX(-33.33%); }
  }
  .animate-scroll {
    animation: scroll 40s linear infinite;
  }
  .hover\:animate-paused:hover {
    animation-play-state: paused;
  }
</style>