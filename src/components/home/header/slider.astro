---
const technologies = [
  { name: "Python", file: "Python-logo-notext.png" }, // Nombre exacto de tu imagen
  { name: "MySQL", file: "mysql.svg" },
  { name: "Power BI", file: "powerBI.svg.png" }, // Tiene doble extensión
  { name: "Tableau", file: "Tableau-Symbol.png" },
  { name: "Excel", file: "excel.png" },
  { name: "Pandas", file: "pandas.svg_.png" }, // Nombre exacto con guion bajo
  { name: "NumPy", file: "numpy-logo.png" },
  { name: "Git", file: "git.svg" },
  { name: "GitHub", file: "github.png" },
  { name: "Selenium", file: "selenium.png" },
  { name: "WordPress", file: "wordpress.png }, // Si no está en la foto, asegúrate que se llame así
  { name: "VS Code", file: "vscode.png" },
  { name: "Bash", file: "bash.svg" }
];
---

<div class="relative overflow-x-hidden px-8 py-8">
  <div class="animate-scroll hover:animate-paused flex w-max gap-12 md:gap-20">
    {
      [...technologies, ...technologies, ...technologies].map((tech) => (
        <div class="group flex items-center gap-2 transition-all duration-300">
          <img
            src={`/svg/${tech.file}`} 
            alt={tech.name}
            class="h-8 w-auto object-contain transition-transform group-hover:scale-110"
            width="32"
            height="32"
            loading="lazy"
            onerror="this.style.border='1px solid red'" 
          />
          <span class="text-lg font-medium text-white whitespace-nowrap">
            {tech.name}
          </span>
        </div>
      ))
    }
  </div>
</div>

<style is:global>
  @keyframes scroll {
    from { transform: translateX(0); }
    to { transform: translateX(-33.33%); }
  }
  .animate-scroll {
    animation: scroll 40s linear infinite;
  }
  .hover\:animate-paused:hover {
    animation-play-state: paused;
  }
</style>