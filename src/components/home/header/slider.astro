---
const technologies = [
  { id: "python", name: "Python", file: "python.svg" },
  { id: "mysql", name: "MySQL", file: "mysql.svg" },
  { id: "powerbi", name: "Power BI", file: "powerBI.svg" },
  { id: "tableau", name: "Tableau", file: "Tableau-Logo.svg" }, // Ajustado al nombre que dijiste
  { id: "excel", name: "Excel", file: "excel.svg" },
  { id: "pandas", name: "Pandas", file: "pandas.svg" },
  { id: "numpy", name: "NumPy", file: "numpy-logo.svg" }, // Ajustado al nombre que dijiste
  { id: "git", name: "Git", file: "git.svg" },
  { id: "github", name: "GitHub", file: "github.png" }, // Ajustado a .png
  { id: "selenium", name: "Selenium", file: "selenium.svg" },
  { id: "beautifulsoup", name: "Beautiful Soup", file: "beautifulsoup.svg" },
  { id: "wordpress", name: "WordPress", file: "wordpress.svg" },
  { id: "vscode", name: "VS Code", file: "vscode.svg" },
  { id: "bash", name: "Bash", file: "bash.svg" }
];
---

<div class="relative overflow-x-hidden px-8 py-8">
  <div class="animate-scroll hover:animate-paused flex w-max gap-12 md:gap-20">
    {
      [...technologies, ...technologies, ...technologies].map((tech) => (
        <div class="group flex items-center gap-2 transition-all duration-300">
          <img
            src={`/svg/${tech.file}`}
            alt={tech.name}
            class="h-8 w-auto object-contain transition-transform group-hover:scale-110"
            width="32"
            height="32"
            loading="lazy"
            onerror="this.style.opacity='0'" 
          />
          <span class="text-lg font-medium text-white whitespace-nowrap">
            {tech.name}
          </span>
        </div>
      ))
    }
  </div>
</div>

<style is:global>
  @keyframes scroll {
    from { transform: translateX(0); }
    to { transform: translateX(-33.33%); }
  }
  .animate-scroll {
    animation: scroll 40s linear infinite;
  }
  .hover\:animate-paused:hover {
    animation-play-state: paused;
  }
  @media (min-width: 768px) {
    .animate-scroll {
      animation-duration: 50s;
    }
  }
</style>